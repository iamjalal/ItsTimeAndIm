<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="@dimen/padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/innerPadding"
            android:layout_marginBottom="@dimen/innerPadding"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginLeft="@dimen/innerPadding"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/twitter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_toRightOf="@id/profile_pic"
            android:layout_marginLeft="@dimen/innerPadding"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/profile_pic"
            android:layout_marginTop="@dimen/innerPadding"
            android:layout_marginBottom="@dimen/innerPadding"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tweet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tweet_text"
            android:layout_marginTop="@dimen/innerPadding"
            android:textSize="10sp"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tweet_time"
            android:layout_marginTop="@dimen/innerPadding"
            android:layout_marginBottom="@dimen/innerPadding"
            android:background="#dedede"/>

        <TextView
            android:id="@+id/retweet_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/separator"
            android:layout_marginTop="@dimen/innerPadding"
            android:textAllCaps="true"
            android:textSize="10sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>